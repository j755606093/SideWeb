/**index.wxss**/
.root{
  background-color: #fff;
  height:100%;
  width:100%;
}

/*搜索框部分*/

.search{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.line{
  flex:1;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height:50px;
  border-bottom:1px solid aliceblue;
  position:relative;
}
.right{
  position:absolute;
  top:15px;
  right:15px;
}
.line-text{
  flex:0.25;
  color:gray;
  font-size: 16px;
  height:20px;
  line-height: 20px;
}
.line-city{
  flex:0.7;
}
.line-img{
  flex:0.1;
  width:20px;
  height:20px;
  justify-content: center;
  margin:0 5px;
}
.picker-text{
  margin-right:20px;
}

/*查询按钮*/
.query{
  width:90%;
  margin:0 5%;
  margin-top:10px;
  background-color: #e74c3c;
  color:#fff;
}