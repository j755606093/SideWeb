.root{
  background-color: #fff;
  height:100%;
  width:100%;
}

/*时间*/
.header{
    /*background-color: #fafafa;*/
    width:100%;
    border-bottom:1px solid #fafafa;
    /*box-shadow: 0 3px 5px 0px #ececec;*/
}
.select-date{
    display: flex;
    flex-direction: row;
    height:40px;
    line-height: 40px;
    justify-content: center;
    align-items: center;
    width:96%;
    padding:0 2%;
    border-bottom:1px solid #fafafa;
}
.date-left{
    flex:0.2;
    color:#0074D9;
}
.date-center{
    flex:0.6;
    text-align: center;
}
.date-right{
    flex:0.2;
    color:#0074D9;
    text-align: right;
}
.select-other{
    display: flex;
    flex-direction: row;
    height:40px;
    line-height: 40px;
    justify-content: center;
    align-items: center;
    width:96%;
    padding:0 2%;
}
.select-left{
    text-align: left;
    flex:0.2;
}
.select-center{
    text-align: center;
    flex:0.6;
}
.select-right{
    text-align: right;
    flex:0.2;
}
.select-img{
    width:16px;
    height:16px;
    margin-right:3px;
}
.select-text{
    color:gray;
    height:40px;
    line-height: 40px;
}
.select-text-active{
    color:#0074D9;
    height:40px;
    line-height: 40px;
}

/*结果*/
.body{
    width:100%;
}
.items{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 96%;
    padding:0 2%;
}
.item{
    flex:1;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width:100%;
    border-bottom:1px solid #fafafa;
}
.item-left{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width:25%;
    flex:0.25;
}
.item-left-text{
    color:#0074D9;
    font-weight: 900;
    flex:1;
}
.item-center{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width:50%;
    flex:0.5;
}
.item-right{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    width:25%;
    flex:0.25;
}
.item-right-text{
    height:30px;
    line-height: 30px;
    font-size:12px;
    color:#AAAAAA;
}