.root{
  background-color: #fff;
  height:100%;
  width:100%;
}

/*时间*/
.header{
    background-color: #fafafa;
    width:100%;
}
.select-date{
    display: flex;
    flex-direction: row;
    height:40px;
    line-height: 40px;
    justify-content: center;
    align-items: center;
    width:96%;
    padding:0 2%;
}
.date-left{
    flex:0.2;
    color:#0074D9;
}
.date-center{
    flex:0.6;
    text-align: center;
}
.date-right{
    flex:0.2;
    color:#0074D9;
    text-align: right;
}