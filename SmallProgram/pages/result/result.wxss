.root{
  background-color: #fff;
  height:100%;
  width:100%;
}

/*时间*/
.header{
    background-color: white;
    width:100%;
    border-bottom:1px solid #fafafa;
    position: fixed;
    top:0;
    left:0;
    z-index:10;
    /*box-shadow: 0 3px 5px 0px #ececec;*/
}
.select-date{
    display: flex;
    flex-direction: row;
    height:40px;
    line-height: 40px;
    justify-content: center;
    align-items: center;
    width:96%;
    padding:0 2%;
    border-bottom:1px solid #fafafa;
}
.date-left{
    flex:0.2;
    color:#0074D9;
}
.date-center{
    flex:0.6;
    text-align: center;
}
.date-right{
    flex:0.2;
    color:#0074D9;
    text-align: right;
}
.select-other{
    display: flex;
    flex-direction: row;
    height:40px;
    line-height: 40px;
    justify-content: center;
    align-items: center;
    width:96%;
    padding:0 2%;
}
.select-left{
    text-align: left;
    flex:0.2;
}
.select-center{
    text-align: center;
    flex:0.6;
}
.select-right{
    text-align: right;
    flex:0.2;
}
.select-img{
    width:16px;
    height:16px;
    margin-right:3px;
    vertical-align: middle;
}
.select-text{
    color:gray;
    height:40px;
    line-height: 40px;
}
.select-text-active{
    color:#0074D9;
    height:40px;
    line-height: 40px;
}

/*结果*/
.body{
    width:100%;
    margin-top:90px;
}
.items{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 96%;
    padding:0 2%;
}
.item{
    flex:1;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width:100%;
    border-bottom:1px solid #fafafa;
    padding:5px 0;
}
.item-left{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width:25%;
    flex:0.25;
}
.item-left-text{
    color:#0074D9;
    font-weight: 900;
    flex:1;
}
.item-center{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width:50%;
    flex:0.5;
}
.item-line-text{
    color:#AAAAAA;
    font-size: 14px;
    margin-right: 10px;
}
.item-line{
    width:80%;
    padding-left:20%;
    height:20px;
    line-height: 20px;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.item-line-image{
    width:14px;
    height:14px;
    margin-right: 10px;
}
.little{
    width:12px;
    height:12px;
}
.sign{
    height:18px;
    width:18px;
    line-height: 20px;
    font-size:12px;
    border-radius: 9px;
    background-color: #FF851B;
    text-align: center;
    color:white;
    vertical-align: middle;
    margin-right: 5px;
}
.item-cityname{
    font-size: 14px;
}
.item-right{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    width:25%;
    flex:0.25;
}
.item-right-text{
    height:25px;
    line-height: 25px;
    font-size:12px;
    color:#AAAAAA;
}
.item-router{
    margin-left:5px;
    font-size:12px;
    color:#AAAAAA;
    height:18px;
    line-height: 18px;
}
.orange{
    color:#FF851B;
}
