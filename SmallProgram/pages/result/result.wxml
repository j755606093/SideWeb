<view class="root">
  <!--时间-->
  <view class="header">
    <!--日期选择-->
    <view class="select-date">
      <text class="date-left">前一天</text>
      <text class="date-center">2017-01-12 明天</text>
      <text class="date-right">后一天</text>
    </view>
    <!--其他选项-->
    <view class="select-other">
      <!--时段显示-->
      <view wx:if="{{selectIndex===1}}" class="select-left"><image class="select-img" src="/picture/select_active.png"></image><text class="select-text-active">时段</text></view>
      <view wx:else class="select-left"><image class="select-img" src="/picture/select.png"></image><text class="select-text">时段</text></view>
      <!--路线信息显示-->
      <view wx:if="{{selectIndex===2}}" class="select-center"><image class="select-img" src="/picture/bus.png"></image><text class="select-text-active">路线信息</text></view>
      <view wx:else class="select-center"><image class="select-img" src="/picture/bus.png"></image><text class="select-text">路线信息</text></view>
      <!--票价显示-->
      <view wx:if="{{selectIndex===3}}" class="select-right"><image class="select-img" src="/picture/downplus_active.png"></image><text class="select-text-active">票价</text></view>
      <view wx:else class="select-right"><image class="select-img" src="/picture/downplus.png"></image><text class="select-text">票价</text></view>
    </view>
  </view>
  <!--结果显示-->
  <scroll-view scroll-y="true" class="body">
    <!--结果列表-->
    <view class="items">
      <!--单个结果-->
      <view class="item" wx:for="{{resultData}}"  wx:key="index" wx:for-item="items" wx:for-index="index" data-index="{{index}}" catchtap="setOrder">
        <view class="item-left"><text class="item-left-text">{{items.StartTime}}</text></view>
        <view class="item-center">
          <!--出发点-->
          <view class="item-line">
            <text class="sign">始</text>
            <text class="item-cityname">{{items.StartPoint}}</text>
          </view>
          <!--途经点-->
          <view class="item-line" data-index="{{index}}" catchtap="showLine">
            <image class="item-line-image" src="/picture/location.png"></image>
            <text class="item-line-text">途经点</text>
            <image class="item-line-image little" src="/picture/downplus.png"></image>
          </view>
          <!--显示途经点-->
          <view class="item-lines" wx:if="{{showLine===index}}">
            <text>始点</text>
            <view wx:for="{{items.SPoint}}" wx:key="i" wx:for-item="list" wx:for-index="i">
              <text class="location-active" wx:if="{{list.NodeType===1}}">{{list.Point+" "+list.BoardTime}}</text>
              <text class="location" wx:else>{{list.Point+" "+list.BoardTime}}</text>
            </view>
            <text>终点</text>
            <view wx:for="{{items.EPoint}}" wx:key="i" wx:for-item="list" wx:for-index="i">
              <text class="location-active" wx:if="{{list.NodeType===2}}">{{list.Point+" "+list.BoardTime}}</text>
              <text class="location" wx:else>{{list.Point}}</text>
            </view>
          </view>
          <!--到达点-->
          <view class="item-line">
            <text class="sign">终</text>
            <text class="item-cityname">{{items.EndPoint}}</text>
          </view>
          <text class="item-router">{{items.Route}}</text>
        </view>
        <view class="item-right">
          <text class="item-right-text orange">{{items.Price+'元'}}</text>
          <text class="item-right-text">{{items.CoName}}</text>
          <text class="item-right-text">{{items.TicketNum+'张余票'}}</text>
        </view>
      </view>
    </view>
  </scroll-view>
</view>