.root{
  background-color: #fff;
  height:100%;
  width:100%;
  position:absolute;
  top:0;
  left:0;
}

/*列表*/
.lists{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    /*align-items: center;*/
    height:100%;
    width:90%;
    margin-bottom:5px;
    position:relative;
}
.list{
    /*display: flex;*/
    width:100%;
    text-align: left;
    flex:1;
    /*height:100%;*/
    /*flex-direction: column;
    justify-content: center;
    align-items: flex-start;*/
    position:relative;
}
.title{
    width:96%;
    font-size:18px;
    color:black;
    height:40px;
    line-height: 40px;
    padding:0 2%;
    background-color: #fafafa;
    margin-bottom:5px;
    display: block;
    float:left;
}
.list-text{
    width:96%;
    font-size: 16px;
    padding:0 2%;
    height:40px;
    line-height: 40px;
    border-bottom:1px solid #fafafa;
    display: block;
    float:left;
}

/*城市名列表*/
.city-lists{
    display: flex;
    width:10%;
    height:100%;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position:fixed;
    top:0;
    right:0;
    border-left:1px solid lightgray;
}
.city-name{
    font-size: 14px;
    margin-top:5px;
}