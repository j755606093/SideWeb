/**index.wxss**/
.root{
  background-color: #fff;
  height:100%;
}
/*搜索签到*/
.search-sign{
  position: absolute;
  z-index: 10;
  top:0;
  left:0;
  width:100%;
  height:40px;
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.search{
  background-color: rgba(0,0,0,.4);
  width:50%;
  text-align: center;
  height:25px;
  line-height: 25px;
  font-size: 14px;
  border-radius: 10px;
  color:#fff;
}
.sign{
  position:absolute;
  top:12px;
  font-size: 14px;
  right:10px;
  color:#fff;
}
/*菜单栏*/
.navs{
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nav-line{
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width:96%;
  margin:0 2%;
  margin-top:10px;
}
.nav{
  flex:0.2;
}
.nav-img{
  width:40px;
  height: 40px;
  display: block;
  margin:auto;
  margin-bottom:5px;
}
.slide-image{
  width:100%;
}
.nav-text{
  font-size: 14px;
}

/*热门视频*/
.root-viedo{
  display:flex;
  flex-direction: column;
  margin-top:5px;
  padding:10px 0;
  border-top:10px solid #f7f7f7;
  border-bottom:10px solid #f7f7f7;
}
.viedo-header{
  flex:1;
  display:flex;
  flex-direction: row;
  margin:0 5px;
  margin-bottom:5px;
}
.header-left{
  flex:1;
  text-align: left;
  font-size: 16px;
}
.header-right{
  flex:1;
  text-align: right;
  font-size:12px;
  color:#999;
}
.videos{
  display: flex;
  flex-direction: row;
  width:96%;
  margin:5px 2%;
}
.video{
  flex:1;
  margin-right:5px;
}
.video-img{
  width:120px;
  height:80px;
}
.video-text{
  font-size:12px;
  width:100%;
  overflow: hidden;
  height:12px;
}
/*热门文章*/
.root-post{
  display:flex;
  flex-direction: column;
  padding:10px 0;
  border-bottom:10px solid #f7f7f7;
}
.post-header{
  flex:1;
  display:flex;
  flex-direction: row;
  margin:0 5px;
}